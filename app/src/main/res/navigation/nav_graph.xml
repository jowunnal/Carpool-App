<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.mate.carpool.fragments.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.mate.carpool.fragments.RegisterFragment"
        android:label="RegisterFragment"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_registerDetailFragment"
            app:destination="@id/registerDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerDetailFragment"
        android:name="com.mate.carpool.fragments.RegisterDetailFragment"
        android:label="RegisterDetailFragment"
        tools:layout="@layout/fragment_register_detail">
        <action
            android:id="@+id/action_registerDetailFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.mate.carpool.fragments.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_main" />

</navigation>